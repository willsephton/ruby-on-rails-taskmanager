<div class="max-w-4xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
  <div class="bg-white border border-gray-100 rounded-lg shadow-sm p-4 sm:p-6">
    <div class="flex items-start justify-between">
      <div class="pr-4">
        <h1 class="text-2xl font-semibold text-gray-900"><%= @task.title %></h1>
        <p class="mt-2 text-sm text-gray-500"><%= @task.description %></p>
        <% if @task.due_date.present? %>
          <p class="mt-3 text-sm text-yellow-700">Due: <span class="font-medium text-gray-900"><%= @task.due_date.strftime("%b %d, %Y") %></span></p>
        <% end %>
        <p class="mt-4 text-sm text-gray-600">Status: <span class="font-medium"><%= @task.completed ? "Completed" : "Not completed" %></span></p>
        <p class="mt-2 text-sm text-gray-500">Created <%= @task.created_at.strftime("%b %d, %Y") if @task.respond_to?(:created_at) %></p>
      </div>

      <div class="ml-6 flex items-start">
        <div class="flex flex-col space-y-2">
          <%= link_to edit_task_path(@task), class: "inline-flex items-center justify-center px-3 py-1.5 rounded-md bg-blue-50 hover:bg-blue-100 text-sm text-blue-700 border border-blue-100 focus:outline-none focus:ring-2 focus:ring-blue-200" do %>
            Edit
          <% end %>

          <%= link_to tasks_path, class: "inline-flex items-center justify-center px-3 py-1.5 rounded-md bg-gray-50 hover:bg-gray-100 text-sm text-gray-700 border border-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200" do %>
            Back
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
